<script>
$(document).ready(function () {
    $(".filter_page").hide();
    $("#fil").click(function() {
        $(".filter_page").toggle();
    });
});
</script>
<body style="padding-top:60px;">
<div class="filter_page">
<%=render "filter_menu"%>
</div>
<h2>Candidate Details</h2>
<div class="table-responsive table-bordered">
<table class="table">
  <thead>
    <tr>
    <th>Registration Number</th><th id="sym"><%= link_to sanitize(" &uarr;"), :sort=>"reg_no" , :type=>"ASC",:q=> @qur  %>
    <%= link_to sanitize(" &darr;"), :sort=>"reg_no" , :type=>"DESC",:q=>@qur %></th>
    <th>Name&nbsp;</th><th id="sym"><%= link_to sanitize("&uarr;"), :sort=>"name" , :type=>"ASC",:q=> @qur %>
    <%= link_to sanitize(" &darr;"), :sort=>"name" , :type=>"DESC" ,:q=> @qur%></th>
    <th>State </th><th id="sym"><%= link_to sanitize("&uarr;"), :sort=>"state" , :type=>"ASC",:q=> @qur %>
    <%= link_to sanitize(" &darr;"), :sort=>"state" , :type=>"DESC",:q=> @qur %></th>
    <th>Branch&nbsp;</th><th id="sym"><%= link_to sanitize("&uarr;"), :sort=>"branch" , :type=>"ASC",:q=> @qur %>
    <%= link_to sanitize(" &darr;"), :sort=>"branch" , :type=>"DESC",:q=> @qur %></th>
    <th>Date of Registration</th><th id="sym"><%= link_to sanitize("&uarr;"), :sort=>"DOR" , :type=>"ASC",:q=> @qur %>
    <%= link_to sanitize(" &darr;"), :sort=>"DOR" , :type=>"DESC",:q=> @qur %></th>
    <th>Date of Closure</th><th id="sym"><%= link_to sanitize("&uarr;"), :sort=>"DOC" , :type=>"ASC",:q=> @qur %>
    <%= link_to sanitize(" &darr;"), :sort=>"DOC" , :type=>"DESC",:q=> @qur %></th>
    <th>Remarks&nbsp;</th><th id="sym"><%= link_to sanitize("&uarr;"), :sort=>"remarks_mobility" , :type=>"ASC",:q=> @qur %>
    <%= link_to sanitize(" &darr;"), :sort=>"remarks_mobility" , :type=>"DESC",:q=> @qur %></th>
    <th>Status&nbsp;</th><th id="sym"><%= link_to sanitize("&uarr;"), :sort=>"status" , :type=>"ASC",:q=> @qur %>
    <%= link_to sanitize(" &darr;"), :sort=>"status" , :type=>"DESC",:q=> @qur %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @candidate_details.each do |candidate_detail| %>
      <tr>
        <td colspan="2"><%= candidate_detail.reg_no %></td>
        <td colspan="2"><%= candidate_detail.name %></td>
        <td colspan="2"><%= candidate_detail.state %></td>
        <td colspan="2"><%= candidate_detail.branch %></td>
        <td colspan="2"><%= candidate_detail.DOR %></td>
	      <td colspan="2"><%= candidate_detail.DOC %></td>
	      <td colspan="2"><%= candidate_detail.remarks_mobility %></td>
	      <td colspan="2"><%= candidate_detail.status %></td>
        <td><%= link_to 'Read', candidate_detail,class:"btn btn-primary" %></td>
        <td><%= link_to 'Update', edit_candidate_detail_path(candidate_detail),class:"btn btn-info" %></td>
        <td><%= link_to 'Delete', candidate_detail, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="text-center">

<%= link_to 'Create', new_candidate_detail_path,class:"btn btn-default"%> |
<a class="btn btn-default" id="fil">Filter</a>
  <%if current_user && current_user.admin %>
    | <%=link_to "Admin Panel", panel_path,class: "btn btn-default" %>
  <%end %>
 | <%= link_to 'Download as .xlsx', download_path(format: :xlsx),class:"btn btn-default" %>
</div>
</body>
<style>
td,th{
font-size:15px;
}
#sym{
  text-indent:-1em;
  width:35px;
  font-weight:bold;
  font-size:20px;
  
}
</style>
