<script>
$(function() {
  $('input[name="DOR"]').daterangepicker({
    autoUpdateInput: false,
    opens: 'center'
  });
  $('input[name="DOC"]').daterangepicker({
    autoUpdateInput: false,
    opens: 'left'
  });
 $('input[name="DOR"]').on('apply.daterangepicker', function(ev, picker) {
      $(this).val(picker.startDate.format('MM/DD/YYYY') + ' - ' + picker.endDate.format('MM/DD/YYYY'));
  });
 $('input[name="DOC"]').on('apply.daterangepicker', function(ev, picker) {
      $(this).val(picker.startDate.format('MM/DD/YYYY') + ' - ' + picker.endDate.format('MM/DD/YYYY'));
  });
 $('input[name="DOR"]').on('cancel.daterangepicker', function(ev, picker) {
      $(this).val('');
  });
 $('input[name="DOC"]').on('cancel.daterangepicker', function(ev, picker) {
      $(this).val('');
  });

});
</script>
